# ============================================
# Configuration Docker Compose
# ============================================

# Environment
NODE_ENV=development

# ============================================
# PostgreSQL Configuration
# ============================================
POSTGRES_DB=travaux_routiers
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# ============================================
# Backend API Configuration
# ============================================
BACKEND_PORT=3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Security
MAX_LOGIN_ATTEMPTS=3
LOCK_TIME_HOURS=24

# ============================================
# Firebase Configuration (optionnel)
# ============================================
# Récupérer depuis la console Firebase > Project Settings > Service accounts
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# ============================================
# Tile Server Configuration
# ============================================
TILE_SERVER_PORT=8080

# ============================================
# Web Application Configuration
# ============================================
WEB_PORT=3001

REACT_APP_API_URL=http://localhost:3000
REACT_APP_TILE_SERVER_URL=http://localhost:8080

# Firebase Web SDK (optionnel, pour auth frontend)
REACT_APP_FIREBASE_API_KEY=
REACT_APP_FIREBASE_AUTH_DOMAIN=
REACT_APP_FIREBASE_PROJECT_ID=
REACT_APP_FIREBASE_STORAGE_BUCKET=
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=
REACT_APP_FIREBASE_APP_ID=